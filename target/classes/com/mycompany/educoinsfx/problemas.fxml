<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="460.0" prefWidth="621.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.educoinsfx.ProblemasController">
   <children>
      <Label text="Problemas?">
         <font>
            <Font name="Garamond" size="44.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txt_Email" prefHeight="40.0" prefWidth="350.0" promptText="Seu e-mail">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txt_Assunto" prefHeight="40.0" prefWidth="350.0" promptText="Assunto">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextArea fx:id="txt_Descricao" prefHeight="180.0" prefWidth="350.0" promptText="Descrição do Problema">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <font>
            <Font size="15.0" />
         </font>
      </TextArea>
      <HBox fillHeight="false" prefHeight="40.0" prefWidth="350.0">
         <children>
            <Button fx:id="btn_Voltar" mnemonicParsing="false" onAction="#irPara" prefHeight="40.0" prefWidth="350.0" text="Voltar">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btn_Enviar" mnemonicParsing="false" prefHeight="40.0" prefWidth="350.0" text="Enviar">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
